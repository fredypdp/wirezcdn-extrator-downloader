{
  "manifest_version": 2,
  "name": "Video URL Finder Pro",
  "version": "4.0",
  "description": "Captura todas as URLs de vídeo da página via múltiplos métodos",
  "icons": { 
    "48": "icon48.png",
    "96": "icon96.png"
  },
  "permissions": [
    "activeTab",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "webNavigation",
    "downloads"
  ],
  "background": { 
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": { 
      "id": "video-finder-pro@example.com", 
      "strict_min_version": "68.0" 
    }
  }
}